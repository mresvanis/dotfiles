set main-view    = line-number:no,interval=5 id:yes date:custom,format="%Y-%m-%d %H:%M:%S" author:abbreviated commit-title:yes,graph,refs,overflow=no
set commit-order = date		# Enum: auto, default, topo, date, reverse (main)
set ignore-case	 = yes

bind generic 9 !bash -c "echo -n %(commit) | pbcopy -selection c"
