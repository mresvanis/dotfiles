cmd - return : /Applications/Kitty.app/Contents/MacOS/kitty --single-instance -d ~

# enter fullscreen mode for the focused container
ctrl + alt - f : chunkc tiling::window --toggle fullscreen
shift + alt + ctrl - f : chunkc tiling::window --toggle native-fullscreen

# change focus between tiling / floating windows
shift + alt - space : chunkc tiling::window --toggle float

# change layout of desktop
alt - e : chunkc tiling::desktop --layout bsp
alt - s : chunkc tiling::desktop --layout monocle

# toggle window split type
ctrl + alt - space : chunkc tiling::window --toggle split

# kill focused window
shift + alt - q : chunkc tiling::window --close

# change focus
alt - h : chunkc tiling::window --focus west
alt - j : chunkc tiling::window --focus south
alt - k : chunkc tiling::window --focus north
alt - l : chunkc tiling::window --focus east
alt - m : chunkc tiling::window --focus biggest

alt - p : chunkc tiling::window --focus prev
alt - n : chunkc tiling::window --focus next

# rotate tree
alt - r : chunkc tiling::desktop --rotate 90

# mirror tree y-axis
alt - y : chunkc tiling::desktop --mirror vertical

# mirror tree x-axis
alt - x : chunkc tiling::desktop --mirror horizontal

# toggle desktop offset
alt - a : chunkc tiling::desktop --toggle offset

# toggle window fullscreen
alt - f : chunkc tiling::window --toggle fullscreen

# move focused window
shift + alt + ctrl - h : chunkc tiling::window --warp west
shift + alt + ctrl - j : chunkc tiling::window --warp south
shift + alt + ctrl - k : chunkc tiling::window --warp north
shift + alt + ctrl - l : chunkc tiling::window --warp east
shift + alt + ctrl - b : chunkc tiling::window --warp biggest

# move focused container to workspace
shift + alt - m : chunkc tiling::window --send-to-desktop $(chunkc get _last_active_desktop)
shift + alt + ctrl - p : chunkc tiling::window --send-to-desktop prev
shift + alt + ctrl - n : chunkc tiling::window --send-to-desktop next
shift + alt + ctrl - 1 : chunkc tiling::window --send-to-desktop 1
shift + alt + ctrl - 2 : chunkc tiling::window --send-to-desktop 2
shift + alt + ctrl - 3 : chunkc tiling::window --send-to-desktop 3
shift + alt + ctrl - 4 : chunkc tiling::window --send-to-desktop 4
shift + alt + ctrl - 5 : chunkc tiling::window --send-to-desktop 5
shift + alt + ctrl - 6 : chunkc tiling::window --send-to-desktop 6

# focus monitor
alt + ctrl - z  : chunkc tiling::monitor -f prev
alt + ctrl - c  : chunkc tiling::monitor -f next
alt + ctrl - 1  : chunkc tiling::monitor -f 1
alt + ctrl - 2  : chunkc tiling::monitor -f 2
alt + ctrl - 3  : chunkc tiling::monitor -f 3

# send window to monitor and follow focus
shift + alt + ctrl - z  : chunkc tiling::window --send-to-monitor prev; chunkc tiling::monitor -f prev
shift + alt + ctrl - c  : chunkc tiling::window --send-to-monitor next; chunkc tiling::monitor -f next

# Resize
cmd + shift - left 	: chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge west
cmd + shift - down 	: chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge south
cmd + shift - up 	: chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge north
cmd + shift - right : chunkc tiling::window --use-temporary-ratio 0.1 --adjust-window-edge east

lcmd + shift - right : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge west
lcmd + shift - down	 : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge south
lcmd + shift - up 	 : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge north
lcmd + shift - left  : chunkc tiling::window --use-temporary-ratio -0.1 --adjust-window-edge east

# .blacklist [
#   "iTerm2"
#   "Google Chrome"
# ]
